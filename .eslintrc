{
    "rules": {
        "semi": [2, "always"],
        "quotes": [2, "single"],
        "max-len": [
            "error",
            {
                "code": 120,
                "ignoreStrings": true,
                "ignoreComments": true,
                "ignoreTemplateLiterals": true
            }
        ],
        "prefer-const": "error",
        "no-var": 2
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "env": {
        "es6": true
    }
}
